---
import "../styles/global.css"; 
import { ClientRouter } from "astro:transitions";

interface Props{
	title:string;
}
const {title} = Astro.props;
---
<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<title>{title}</title>
		<ClientRouter/>
		<script is:inline>
			// Aplicar dark mode antes de que se renderice la p√°gina para evitar flash
			const darkMode = localStorage.getItem('biblia-dark-mode');
			if (darkMode === 'true' || (darkMode === null && window.matchMedia('(prefers-color-scheme: dark)').matches)) {
				document.documentElement.classList.add('dark');
			}
		</script>
	</head>
	<body class="bg-amber-50/70 dark:bg-gray-900 min-h-screen transition-colors duration-300">
		<slot />
	</body>
</html>

